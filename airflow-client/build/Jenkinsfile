properties([
        parameters(
                [
                        stringParam(
                                name: 'BUILD_PARAMS',
                                defaultValue: ''
                        ),
                        choiceParam(
                                name: 'BRANCH',
                                choices: ['main', 'frontend']
                        )
                ]
        )
])

pipeline {

    options {
        ansiColor('xterm')
        skipDefaultCheckout true
    }

    agent {
        kubernetes {
            yamlFile 'airflow-client/build/builder.yaml'
        }
    }

    stages {
        
        stage('Clone git repo') {
            steps {
                container('git') {
                    script {
                        sh "git -C /kaniko/workspace/datagram_ci_cd pull"
                    }
                }
            }
        }
    }
}
